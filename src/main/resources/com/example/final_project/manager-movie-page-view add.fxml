<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="195.0" prefWidth="516.0" style="-fx-background-color: #EDF7F6;"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.final_project.Controller.ManagerMovieAddController">
    <children>
        <Label layoutX="211.0" layoutY="21.0" prefHeight="34.0" prefWidth="93.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Movies" />

        <Label fx:id="movieLabel" layoutX="127.0" layoutY="56.0" style="-fx-font-size: 14px;" text="Movie" textAlignment="CENTER" />
        <Label fx:id="genreLabel" layoutX="343.0" layoutY="56.0" style="-fx-font-size: 14px;" text="Genre" />

        <Button fx:id="addButton" layoutX="175.0" layoutY="159.0" mnemonicParsing="false" style="-fx-background-color: #D3D3D3; -fx-text-fill: #000000;" text="Add" onAction="#handleAddMovie"/>

        <TextField fx:id="movieTextField" layoutX="79.0" layoutY="90.0" />
        <TextField fx:id="genreTextField" layoutX="290.0" layoutY="90.0" />
    </children>
</AnchorPane>
